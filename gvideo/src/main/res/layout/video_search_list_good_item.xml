<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/search_item_background"
                android:layout_height="150dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/video_item_icon"
        fresco:actualImageScaleType="centerInside"
        fresco:failureImage="@android:drawable/ic_delete"
        fresco:failureImageScaleType="focusCrop"
        android:layout_width="90dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/video_item_vip_msg"
        android:layout_alignBottom="@id/video_item_icon"
        android:layout_width="wrap_content"
        android:text="vip资源\n只可试看"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="8dp"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/video_item_name"
        android:layout_toRightOf="@id/video_item_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/text_size_18"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        android:text="名字"/>

    <TextView
        android:id="@+id/video_item_actor"
        android:layout_below="@id/video_item_name"
        android:layout_toRightOf="@id/video_item_icon"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="主演"/>

    <com.wang.gvideo.common.view.HorizontalListView
        android:id="@+id/video_item_diversity"
        android:layout_toRightOf="@id/video_item_icon"
        android:layout_alignParentBottom="true"
        android:divider="@color/transparent"
        fresco:dividerWidth="5dp"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="10dp"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/video_item_type"
        android:layout_below="@id/video_item_actor"
        android:layout_toRightOf="@id/video_item_icon"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="8dp"
        android:text="类别"/>
    <TextView
        android:id="@+id/video_item_display"
        android:layout_below="@id/video_item_actor"
        android:layout_toRightOf="@id/video_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="8dp"
        android:text="·类型"/>

    <TextView
        android:id="@+id/video_item_feature"
        android:layout_below="@id/video_item_actor"
        android:layout_toRightOf="@id/video_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="8dp"
        android:text="·国家"/>

    <ImageView
        android:id="@+id/video_item_collect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/collect_icon"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>